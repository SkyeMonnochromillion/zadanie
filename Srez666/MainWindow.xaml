        </StackPanel>
        <StackPanel Grid.Row="2" Background="Black" Orientation="Horizontal" Margin="0,0,-0.4,0">
            <Button x:Name="BtnExit" Background="Red" Content="Выход" Foreground="White" Width="100" Height="25" FontSize="15" Margin="660,0,0,0" Click="BtnExit_Click"/>
        </StackPanel>
        <StackPanel Grid.Row="1" Orientation="Horizontal" Background="OrangeRed">
            <Image Source="/Resources/istock-161712782.jpg" Width="800" Opacity="0.7"/>
        </StackPanel>
        <Frame x:Name="FrmMain" ContentRendered="FrmMain_ContentRendered" Grid.Row="1" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
