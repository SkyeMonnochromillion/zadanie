        <Grid.RowDefinitions>
            <RowDefinition Height="0.2*"/>
            <RowDefinition/>
            <RowDefinition Height="0.2*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Background="Black" Orientation="Horizontal" Margin="0,0,-0.4,0">
            <Image Margin="45,0,0,0" Source="c:\users\cab41-10\source\repos\srez666\srez666\resources\leviathan.webp"/>
            <TextBlock FontSize="25" FontFamily="Century" Foreground="White" Margin="120,15,0,0" Text="Castle Rock"/>
